# Coffee Platform Environment Variables
# Copy this file to .env and fill in your actual values

# ============================================
# Hedera Network Configuration
# ============================================
HEDERA_NETWORK=testnet
HEDERA_OPERATOR_ID=0.0.12345
HEDERA_OPERATOR_KEY=your-private-key-here

# ============================================
# WalletConnect Configuration
# ============================================
# WalletConnect Project ID for HashConnect integration
# Get your project ID from https://cloud.walletconnect.com/
VITE_WALLETCONNECT_PROJECT_ID=39948bbdaaebec2790629f3e9589793a

# Hedera network for frontend (testnet or mainnet)
VITE_HEDERA_NETWORK=testnet

# Enable debug logging in browser console (true or false)
# Set to false in production
VITE_DEBUG=true

# ============================================
# Smart Contract Addresses
# ============================================
USDC_TOKEN_ID=0.0.11111
ISSUER_CONTRACT_ID=0.0.22222
LENDER_CONTRACT_ID=0.0.33333
PRICE_ORACLE_CONTRACT_ID=0.0.44444
REVENUE_RESERVE_CONTRACT_ID=0.0.55555
TREE_MANAGER_CONTRACT_ID=0.0.66666
MARKETPLACE_CONTRACT_ID=0.0.77777

# ============================================
# Admin Configuration
# ============================================
ADMIN_ACCOUNT_ID=0.0.99999
ADMIN_TOKEN=admin-secret-token-replace-in-production

# ============================================
# Database Configuration
# ============================================
# Local SQLite (for development)
DATABASE_URL=file:./local-store/sqlite/sqlite.db

# Turso Database (for production)
# TURSO_DATABASE_URL=libsql://chai-platform-yourname.turso.io
# TURSO_AUTH_TOKEN=eyJhbGc...your-actual-token...

# ============================================
# Server Configuration
# ============================================
API_PORT=3001
FRONTEND_PORT=3000

# ============================================
# Feature Flags
# ============================================
# Set to 'true' to disable investor KYC/verification (auto-approves investors)
DISABLE_INVESTOR_KYC=false

# Enable demo bypass for farmer verification
ENABLE_DEMO_BYPASS=false

# ============================================
# Default User Settings
# ============================================
# These settings are applied to new user accounts when they are created
# Existing user settings are not affected by changes to these values

# Default value for skipFarmerVerification flag (true/false)
DEFAULT_SKIP_FARMER_VERIFICATION=false

# Default value for skipInvestorVerification flag (true/false)
DEFAULT_SKIP_INVESTOR_VERIFICATION=false

# Default value for demoBypass flag (true/false)
DEFAULT_DEMO_BYPASS=false

# ============================================
# Caching Configuration
# ============================================
PRICE_CACHE_TTL=300
BALANCE_CACHE_TTL=30
DISTRIBUTION_CACHE_TTL=3600
POOL_STATS_CACHE_TTL=120

# ============================================
# Rate Limiting
# ============================================
RATE_LIMIT_STANDARD=100
RATE_LIMIT_ADMIN=50
RATE_LIMIT_BATCH=10

# ============================================
# Monitoring & Logging
# ============================================
LOG_LEVEL=info
ENABLE_ACCESS_LOGS=true
ENABLE_ERROR_LOGS=true

# ============================================
# Security
# ============================================
# CORS allowed origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# Session secret for admin authentication
SESSION_SECRET=your-session-secret-here

# ============================================
# External Services (Optional)
# ============================================
# IPFS gateway for document storage
IPFS_GATEWAY=https://ipfs.io/ipfs/

# Block explorer URL
HEDERA_EXPLORER=https://hashscan.io/testnet/

# ============================================
# Production Settings (Uncomment for production)
# ============================================
# NODE_ENV=production
# HEDERA_NETWORK=mainnet
# ENABLE_HTTPS=true
# SSL_CERT_PATH=/path/to/cert.pem
# SSL_KEY_PATH=/path/to/key.pem