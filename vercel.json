{
  "version": 2,
  "builds": [
    {
      "src": "api/server.ts",
      "use": "@vercel/node",
      "config": {
        "maxDuration": 30
      }
    },
    {
      "src": "frontend/**",
      "use": "@vercel/static"
    }
  ],
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/server.ts"
    },
    {
      "source": "/public/(.*)",
      "destination": "/frontend/public/$1"
    },
    {
      "source": "/js/(.*)",
      "destination": "/frontend/js/$1"
    },
    {
      "source": "/styles/(.*)",
      "destination": "/frontend/styles/$1"
    },
    {
      "source": "/app.html",
      "destination": "/frontend/app.html"
    },
    {
      "source": "/grove-tracker.html",
      "destination": "/frontend/grove-tracker.html"
    },
    {
      "source": "/tree-health-dashboard.html",
      "destination": "/frontend/tree-health-dashboard.html"
    },
    {
      "source": "/",
      "destination": "/frontend/index.html"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "Access-Control-Allow-Origin",
          "value": "*"
        },
        {
          "key": "Access-Control-Allow-Methods",
          "value": "GET, POST, PUT, DELETE, OPTIONS"
        },
        {
          "key": "Access-Control-Allow-Headers",
          "value": "Content-Type, Authorization"
        }
      ]
    }
  ]
}
